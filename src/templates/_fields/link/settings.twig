{% import '_includes/forms' as forms %}

<div class="flex-fields fields">
	{{ forms.lightswitchField({
		label: field.getAttributeLabel('textNotOptional'),
		instructions: field.getAttributeHint('textNotOptional'),
		attribute: 'textNotOptional',
		id: 'textNotOptional',
		name: 'textNotOptional',
		on: field.textNotOptional,
		first: true,
	}) }}
	{{ forms.lightswitchField({
		label: field.getAttributeLabel('urlNotOptional'),
		instructions: field.getAttributeHint('urlNotOptional'),
		attribute: 'urlNotOptional',
		id: 'urlNotOptional',
		name: 'urlNotOptional',
		on: field.urlNotOptional,
		first: true,
	}) }}
	{{ forms.checkboxSelectField({
		label: field.getAttributeLabel('allowedLinkTypes'),
		instructions: field.getAttributeHint('allowedLinkTypes'),
		attribute: 'allowedLinkTypes',
		id: 'allowedLinkTypes',
		name: 'allowedLinkTypes',
		options: field.getAvailableLinkTypes(),
		values: field.allowedLinkTypes == ['*'] ? '*' : field.allowedLinkTypes,
		showAllOption: true,
		warning: false,
		errors: field.getErrors("allowedLinkTypes"),
	}) }}
</div>
